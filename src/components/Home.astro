---
import DysoonLogo from '../assets/images/logo.svg';
import Strip from './Strip.svelte';
---

<main>
	<img src={DysoonLogo.src} id="logo" 
	transition:persist="true"
	transition:name="logo"
	/>
	<Strip class="strip_top" left transition:name="striptop" transition:slide />
	<Strip class="strip_bottom" right transition:name="stripbottom" transition:slide />
	<style>
		main {
			height: 100vh;
			margin: 0;
			padding: 0;
			overflow: hidden;
			width: 100%;
			background: darkred;
		position: relative;
		}
		#logo {
			width: 10vw;
            position: absolute;
            top: 0;
            left: 0;
			z-index: 100; 
			border-right: 10px solid darkred; 
		}
		.strip_top {
			position: absolute;
			top: 0;
			right: 0;
			z-index: 50;
		}
		.strip_bottom {
			position: absolute;
			bottom: 0;
			right: 0;
			z-index: 50;
		}
	</style>
</main>