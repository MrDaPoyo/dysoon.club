---
import { ClientRouter } from "astro:transitions";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/css/main.css" />
		<title>DYSOON CLUB ゲイのたわごと</title>
		<ClientRouter />
	</head>
	<body>
		<slot />
		<p id="footer">DYSOON.CLUB 1999c</p>
	</body>
	<style>
		body {
			color: white;
			height: 100vh;
			width: 100%;
			margin: 0;
			padding: 0;
			overflow: hidden;
			position: relative;
			background-color: darkred;
		}
		#footer {
			z-index: 100;
			position: absolute;
			bottom: 1vh;
			right: 50%;
			transform: translateX(50%);
			padding: 0.5rem;
			background-color: darkred;
		}
	</style>
</html>
